{% extends 'Home/index.html.twig' %}

{% block body %}
    <!-- Blog Post Start-->
    <div class="bg-white rounded shadow">
        <div class="p-6 md:p-7 lg:p-9">
            <a href="/posts/category/{{ post.category.name }}"
               class="font-bold text-red-500">{{ post.category.name|upper }}</a>
            <h3 class="font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-2"><a
                        href="/posts/{{ post.slug }}">{{ post.title }}</a></h3>
            <div class="mt-3 mb-3 text-sm text-gray-700 flex items-center">
                <a href="/posts/author/{{ post.author.id }}"
                   class="font-bold text-gray-600">{{ post.author.username }}</a>
                <span class="ml-3">
     <svg class="inline mr-1 -mt-0.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
          fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="feather feather-clock">
     <circle cx="12" cy="12" r="10"></circle>
     <polyline points="12 6 12 12 16 14"></polyline>
     </svg>
     {{ post.createdAt|date }}
     </span>
            </div>
            <div class="text-base md:text-lg text-gray-500">
                <p class="leading-7 lg:leading-8">
                    {{ post.content }}
                </p>
            </div>
        </div>
        <!-- Blog Post End-->
        <!-- Comments Start-->
        <div class="p-6 md:p-7 lg:p-9">
            <h3 class="font-extrabold text-l sm:text-xl md:text-2xl lg:text-3xl mt-2">Commentaires</h3>
            {% for comment in comments %}
                <div class="mt-3 mb-3 text-sm text-gray-700 flex items-center">
                    <p class="font-bold text-gray-600">{{ comment.author.username }}</p>
                    <span class="ml-3">
     <svg class="inline mr-1 -mt-0.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
          fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="feather feather-clock">
     <circle cx="12" cy="12" r="10"></circle>
     <polyline points="12 6 12 12 16 14"></polyline>
     </svg>
     {{ comment.createdAt|date }}
     </span>
                </div>
                <div class="text-base md:text-lg text-gray-500">
                    <p class="leading-7 lg:leading-8">
                        {{ comment.content }}
                    </p>
                </div>
            {% endfor %}
        </div>
        <!-- Comments End-->
        {% if isConnected %}
            <div class="p-6 md:p-7 lg:p-9">
                <a href="/posts/{{ post.slug }}/comment"
                   class="mt-4 inline-block w-full font-bold">
                    <button class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 text-xl text-extrabold">
                        <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                         stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M13 9l3 3m0 0l-3 3m3-3H8m13 0a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                              </span>
                        Laisser un commentaire sur cet article !
                    </button>
                </a>
            </div>
        {% endif %}
    </div>

{% endblock %}
