{% extends 'Home/index.html.twig' %}

{% block body %}

    <div class="bg-white rounded shadow">
        <div class="p-6 md:p-7 lg:p-9">
            {% if category is not null and category.is is not null %}
                <h1 class="font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-2 text-red-700 text-center">
                    Tous les articles de la cat√©gorie {{ category.name|upper }}
                </h1>
                {% else %}
                    <h1 class="font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-2 text-red-700 text-center">
                        Tous les articles
                    </h1>
            {% endif %}
        </div>
    </div>
    <br>
    <!-- Blog Post Start-->
    {% for post in posts %}
        <div class="bg-white rounded shadow">
            <div class="p-6 md:p-7 lg:p-9">
                {% if post.category.id is not null %}
                <a href="/posts/category/{{ post.category.name }}"
                   class="font-bold text-red-500 hover:text-red-300">{{ post.category.name|upper }}</a>
                {% else %}
                    <p class="font-bold text-red-500">
                        {{ post.category.name|upper }}
                    </p>
                    {% endif %}
                <h3 class="font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-2 hover:text-gray-700"><a
                            href="/posts/{{ post.slug }}">{{ post.title }}</a></h3>
                <div class="mt-3 mb-3 text-sm text-gray-700 hover:text-gray-900 flex items-center">
                    <a href="/posts/author/{{ post.author.id }}"
                       class="font-bold text-gray-600">{{ post.author.username }}</a>
                    <span class="ml-3">
     <svg class="inline mr-1 -mt-0.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
          fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="feather feather-clock">
     <circle cx="12" cy="12" r="10"></circle>
     <polyline points="12 6 12 12 16 14"></polyline>
     </svg>
     {{ post.createdAt|date }}
     </span>
                </div>
                <div class="text-base md:text-lg text-gray-500">
                    <p class="leading-7 lg:leading-8">
                        {{ post.lede }}
                    </p>
                    <a href="/posts/{{ post.slug }}" class="mt-4 inline-block font-bold text-red-500 hover:text-red-300">Lire l'article</a>
                </div>
            </div>
        </div>
        <br>
    {% endfor %}
    <!-- Blog Post End-->

{% endblock %}