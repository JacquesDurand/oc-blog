{% extends 'Home/index.html.twig' %}

{% block body %}

    <div class="bg-white rounded shadow">
        <div class="p-6 md:p-7 lg:p-9">
            <h1 class="font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-2 text-red-700 text-center">
                Toutes les catégories
            </h1>
        </div>
    </div>
    <br>
    {% for category in categories %}
        <div class="bg-white rounded shadow">
            <div class="p-6 md:p-7 lg:p-9">
                <a href="/posts/category/{{ category.name }}"
                   class="font-bold text-gray-900">{{ category.name|upper }}</a>
                <div class="text-base md:text-lg">
                    <a href="/posts/category/{{ category.name }}" class="mt-4 inline-block font-bold text-red-500 hover:text-red-300">Voir les articles
                        de cette catégorie</a>
                </div>
            </div>
        </div>
        <br>
    {% endfor %}

{% endblock %}