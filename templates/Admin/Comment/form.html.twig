{% extends 'Admin/base.html.twig' %}

{% block body %}
<!-- Blog Post Start-->
<div class="bg-white rounded shadow">
    <div class="p-6 md:p-7 lg:p-9">
        <a href="/posts/category/{{ post.category.name }}"
           class="font-bold text-red-500">{{ post.category.name|upper }}</a>
        <h3 class="font-extrabold text-xl sm:text-2xl md:text-3xl lg:text-4xl mt-2"><a
                    href="/posts/{{ post.slug }}">{{ post.title }}</a></h3>
        <div class="mt-3 mb-3 text-sm text-gray-700 flex items-center">
            <a href="/posts/author/{{ post.author.id }}"
               class="font-bold text-gray-600">{{ post.author.username }}</a>
            <span class="ml-3">
     <svg class="inline mr-1 -mt-0.5" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24"
          fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
          class="feather feather-clock">
     <circle cx="12" cy="12" r="10"></circle>
     <polyline points="12 6 12 12 16 14"></polyline>
     </svg>
     {{ post.createdAt|date }}
     </span>
        </div>
        <div class="text-base md:text-lg text-gray-500">
            <p class="leading-7 lg:leading-8">
                {{ post.content }}
            </p>
        </div>
    </div>
    <!-- Blog Post End-->
    <div class="bg-white rounded shadow">
        <div class="p-6 md:p-7 lg:p-9">
            <div>
                <p class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Laisser un commentaire sur cet article
                </p>
            </div>
            <form class="mt-8 space-y-6" action="/admin/posts/{{ post.id }}/comment" method="POST">
                <input type="hidden" name="token" value="{{ token }}"/>
                <input type="hidden" name="remember" value="true">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        <label for="content" class="sr-only">Contenu</label>
                        <textarea id="content" name="content" required
                                  class="appearance-none rounded relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm"
                                  placeholder="Votre commentaire ..."></textarea>
                    </div>
                </div>
                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
          <span class="absolute left-0 inset-y-0 flex items-center pl-3">
            <!-- Heroicon name: annotation -->
    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
    </svg>
          </span>
                        Commenter
                    </button>
                </div>
            </form>
        </div>
    </div>

    {% endblock %}